# GharKaKhana Environment Configuration
# Copy this file to .env.local and update with your values

# ===========================================
# AWS Configuration
# ===========================================
AWS_REGION=ap-south-1
AWS_ACCOUNT_ID=your-aws-account-id

# Cognito
NEXT_PUBLIC_COGNITO_USER_POOL_ID=ap-south-1_xxxxx
NEXT_PUBLIC_COGNITO_CLIENT_ID=your-cognito-client-id
NEXT_PUBLIC_COGNITO_IDENTITY_POOL_ID=ap-south-1:xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# API Gateway
NEXT_PUBLIC_API_URL=https://xxxxxxxxxx.execute-api.ap-south-1.amazonaws.com/prod

# S3 & CloudFront
NEXT_PUBLIC_ASSETS_URL=https://dxxxxxxxxxx.cloudfront.net
NEXT_PUBLIC_S3_BUCKET=gharkakhana-uploads-prod

# ===========================================
# Application Configuration
# ===========================================
NEXT_PUBLIC_APP_NAME=GharKaKhana
NEXT_PUBLIC_APP_URL=https://gharkakhana.com
NEXT_PUBLIC_APP_ENV=development

# ===========================================
# Google Maps (for location services)
# ===========================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ===========================================
# Payment Gateway (Razorpay)
# ===========================================
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your-razorpay-secret

# ===========================================
# Analytics (Optional)
# ===========================================
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# ===========================================
# Feature Flags
# ===========================================
NEXT_PUBLIC_ENABLE_STEEL_BOX=true
NEXT_PUBLIC_ENABLE_REVIEWS=true
NEXT_PUBLIC_ENABLE_CHAT=false
